sftp-user-mgmt ALL = NOPASSWD: /usr/sbin/useradd
sftp-user-mgmt ALL = NOPASSWD: /usr/sbin/usermod
sftp-user-mgmt ALL = NOPASSWD: /usr/sbin/userdel
sftp-user-mgmt ALL = NOPASSWD: /usr/sbin/groupmod
sftp-user-mgmt ALL = NOPASSWD: /usr/sbin/groupdel
sftp-user-mgmt ALL = NOPASSWD: /bin/chown
sftp-user-mgmt ALL = NOPASSWD: /bin/chmod
sftp-user-mgmt ALL = NOPASSWD: /bin/mkdir
sftp-user-mgmt ALL = NOPASSWD: /bin/chage

